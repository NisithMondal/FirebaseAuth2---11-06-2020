<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfileActivity">



    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text="Create Your Profile"
        android:textColor="#ee00aa"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_below="@+id/text_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_color="#388E3C"
        app:civ_border_width="5dp"
        />



    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/profile_image"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <EditText
        android:id="@+id/age_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Age"
        android:inputType="numberSigned"
        android:maxLines="1"
        android:layout_below="@+id/name_edit_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />


    <EditText
        android:id="@+id/gender_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Gender"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/age_edit_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />


    <EditText
        android:id="@+id/country_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Country Name"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/gender_edit_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />


    <EditText
        android:id="@+id/channel_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Channel Name"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/country_name_edit_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        />





    <Button
        android:id="@+id/save_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background_style"
        android:text="Save"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/channel_name_edit_text"
        android:textAllCaps="false"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>