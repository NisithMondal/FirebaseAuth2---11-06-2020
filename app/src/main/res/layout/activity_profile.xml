<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#ee00aa"
        android:textStyle="italic|bold"

        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_view"
        android:layout_below="@+id/text_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:civ_border_color="#388E3C"
        app:civ_border_width="5dp"
        />


    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_view"
        android:layout_marginTop="20dp"
        android:paddingStart="130dp"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_marginTop="7dp"
        android:paddingStart="130dp"
        android:textSize="18sp"
        android:textColor="#000000"
        />



    <TextView
        android:id="@+id/gender_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_text_view"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:paddingStart="130dp"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/country_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_text_view"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:paddingStart="130dp"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/channel_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_name_text_view"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:paddingStart="130dp"
        android:textColor="#000000"
        />



</RelativeLayout>