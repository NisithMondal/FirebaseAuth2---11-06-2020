<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="15dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Nisith Mondal"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/state_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: West Bengal"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/name_text_view"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/country_name_text_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Name: Nisith Mondal"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/state_name_text_view"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No.: 9091473871"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/state_name_text_view"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/country_name_text_view"
            />


        <TextView
            android:id="@+id/update_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/country_name_text_view"
            android:layout_marginStart="60dp"
            android:layout_marginTop="7dp"
            android:padding="7dp"
            android:background="@drawable/button_background_style"
            />


        <TextView
            android:id="@+id/delete_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/country_name_text_view"
            android:layout_marginStart="40dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:padding="7dp"
            android:background="@drawable/another_button_background_style"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>